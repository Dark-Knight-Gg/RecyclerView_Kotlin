<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="wrap_content"
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/adadpter_job_imgPicture"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/adapter_job_txtName"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/adadpter_job_imgPicture"
        android:textColor="#ff00"
        android:textSize="20sp"
        android:textStyle="bold" />
    <TextView
        android:layout_below="@id/adapter_job_txtName"
        android:layout_toRightOf="@id/adadpter_job_imgPicture"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/adapter_job_txtId"
        android:layout_width="180dp"
        android:textStyle="italic"
        android:textSize="18sp"
        android:textColor="#ff00"
        android:layout_height="wrap_content"/>
    <ImageView
        android:src="@drawable/delete"
        android:layout_toRightOf="@id/adapter_job_txtName"
        android:layout_width="38dp"
        android:id="@+id/adapter_job_imgDelete"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:layout_height="38dp"/>
</RelativeLayout>